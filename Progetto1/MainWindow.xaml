        <TextBox x:Name="txtDurata" HorizontalAlignment="Left" Margin="25,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Height="32"/>
        <Button x:Name="btnCreaBrano" Content="Crea Brano" HorizontalAlignment="Left" Margin="25,246,0,0" VerticalAlignment="Top" Height="31" Width="83" Click="btnCreaBrano_Click"/>
        <Label Content="Lista brani:" HorizontalAlignment="Left" Margin="474,25,0,0" VerticalAlignment="Top" Height="26" Width="69"/>
